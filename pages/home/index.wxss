@import 'weui.wxss';

page {
  font-size: 16px;
}

.container {
  padding: 20rpx 0;
}

.scrollview, .inputView {
  width: 80%;
  margin: 10rpx 30rpx 0rpx 30rpx;
  border: 1rpx solid #29d66b;
  border-radius: 25rpx;
}

.scrollview {
  margin-top: 0prx;
  color: #29d66b;
}

.itemview {
  margin: 10rpx 20rpx 0rpx;
  background-color: #e2f3f7;
}

.itemview text {
  margin-left: 100rpx;
}

.inputView input {
  height: 100rpx;
  margin-left: 26rpx;
  font-size: 12px;
}

.result .type text {
  display: inline;
}

.result {
  width: 90%;
  margin: 106rpx 20rpx;
}

.result text {
  display: block;
  line-height: 58rpx;
}

.icon-in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

