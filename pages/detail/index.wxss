@import 'weui.wxss';
.movie-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
/* 下边框左右动画 */
.line{position: absolute;bottom: 0;left: 0;height: 4rpx;background: rgba(63, 241, 27, 0.993);transition: all .3s ease-out .1s;}

.movie-content-wrapper{
  padding-top: 50px;
  width: 100%;
  height: 100%;
}
.detail-image{
 width: 100%;
  height: 100%;
}
page{
   height:100%;                        
}
.imagesize{
 display:flex;
 height: 100%;
 justify-content: center;
 align-items:center;
}

